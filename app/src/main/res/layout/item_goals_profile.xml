<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goals"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_goal_serious"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:text="Serious relationship"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/chip_unselected"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tv_goal_friends"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:text="New friends"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/chip_unselected"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_goal_casual"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:text="Something casual"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/chip_unselected"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tv_goal_vibing"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:text="Just vibing"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/chip_unselected"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_goal_open"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:text="Open to anything"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/chip_unselected"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tv_goal_figuring"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:text="Still figuring it out"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/chip_unselected"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
