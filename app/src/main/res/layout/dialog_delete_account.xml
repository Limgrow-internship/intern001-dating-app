<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/bg_bottom_sheet_rounded">

    <ImageView
        android:layout_width="37dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_handle"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete your account?"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#222"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deleting your account will permanently erase your profile, matches, and messages. This action cannot be undone."
        android:textColor="#666"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="22dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Delete Account"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/bg_button_black"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
