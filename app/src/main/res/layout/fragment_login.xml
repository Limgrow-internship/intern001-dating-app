<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <!-- Background full screen -->
    <ImageView

        android:id="@+id/bgImage"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_hearts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container Form Login -->
    <LinearLayout
        android:paddingTop="5dp"
        android:id="@+id/container"
        android:orientation="vertical"
        android:background="@drawable/bg_white_round"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:text="LOG IN"
            android:textStyle="bold"
            android:textSize="32sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="24dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_round"
            android:hint="Email"
            android:padding="14dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/edittext_round"
            android:inputType="textPassword"
            android:padding="14dp"
            android:layout_marginTop="30dp"
            android:drawableEnd="@drawable/ic_eye_off"
            android:drawablePadding="12dp"/>


        <TextView
            android:id="@+id/btnFogotPass"
            android:text="Forgot password"
            android:textSize="13sp"
            android:gravity="end"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnLogin"
            android:text="LOG IN"
            android:textAllCaps="false"
            android:backgroundTint="#000000"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <TextView
            android:text="Or  log  in  with"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnGoogle"
                android:src="@drawable/ic_google"
                android:padding="15dp"
                android:background="@drawable/bg_gray_round"
                android:layout_width="60dp"
                android:layout_height="60dp"
                />

            <ImageView
                android:id="@+id/btnFacebook"
                android:src="@drawable/ic_facebook"
                android:padding="15dp"
                android:background="@drawable/bg_gray_round"
                android:layout_marginStart="16dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="34dp">

            <TextView
                android:text="Donâ€™t have account?"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/btnSignUp"
                android:text=" Sign up"
                android:textSize="14sp"
                android:textColor="#006AFF"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
