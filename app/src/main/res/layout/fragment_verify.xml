<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frg_verify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_signup"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/containerWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_white_rounded"
        android:padding="24dp"
        android:layout_marginTop="220dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_marginTop="10dp">
                </ImageView>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/registration"
                    android:textStyle="bold"
                    android:textSize="32dp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="32dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/otpContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:weightSum="6">

                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:background="@drawable/bg_verify_otp" />

                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:background="@drawable/bg_verify_otp" />

                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:background="@drawable/bg_verify_otp" />

                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:background="@drawable/bg_verify_otp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="48dp">
                <TextView
                    android:id="@+id/tvSendTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/enter_the_code"
                    android:textSize="18dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvEmailOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/email_example"
                    android:textSize="18dp"
                    android:visibility="visible"
                    android:textColor="#00BEFF" />
            </LinearLayout>

            <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/verify"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#000000"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:textFontWeight="700"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="@string/didn_receive"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvRecentCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="700"
                android:textSize="18dp"
                android:text="@string/recent_code"
                android:textStyle="bold"
                android:textColor="#00BEFF"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
