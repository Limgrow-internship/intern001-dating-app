<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_match_background">

    <!-- Match Animation Container -->
    <LinearLayout
        android:id="@+id/matchAnimationContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- Match Icon/Animation -->
        <ImageView
            android:id="@+id/ivMatchIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_match_success"
            android:contentDescription="@string/match_found" />

        <!-- Match Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/its_a_match"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Match Message -->
        <TextView
            android:id="@+id/tvMatchMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/your_hearts_just_turned_on"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- User Photos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Current User Photo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginEnd="-30dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/white">

                <ImageView
                    android:id="@+id/ivCurrentUserPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_launcher_background" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Matched User Photo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginStart="-30dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/white">

                <ImageView
                    android:id="@+id/ivMatchedUserPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_launcher_background" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Matched User Name -->
        <TextView
            android:id="@+id/tvMatchedUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Thien Vi" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Send Message Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendMessage"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/send_message"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/white"
            app:cornerRadius="28dp"
            android:textColor="@color/bottom_nav_selected" />

        <!-- Keep Swiping Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKeepSwiping"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/keep_swiping"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="28dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
