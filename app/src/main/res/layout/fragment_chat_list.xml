<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="50dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Matches"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>

    <FrameLayout
        android:id="@+id/matchPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="121dp"
                android:layout_height="216dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_avatar_round" />

        </LinearLayout>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMatches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:visibility="gone"/>


    <FrameLayout
        android:id="@+id/noMatchesCard"
        android:layout_width="121dp"
        android:layout_height="216dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_avatar_round"
            android:src="@drawable/bg_avatar_round" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No matches yet"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvConversations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:padding="0dp"/>

    <LinearLayout
        android:id="@+id/noChatsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvNoChatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No chats yet"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222222"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvNoChatsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match with someone to start chatting and make your first connection now."
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
