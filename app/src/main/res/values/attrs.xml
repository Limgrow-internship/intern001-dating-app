<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CustomButton Attributes -->
    <declare-styleable name="CustomButton">
        <attr name="buttonText" format="string" />
        <attr name="buttonStyle" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="outline" value="2" />
        </attr>
    </declare-styleable>

    <!-- ProgressBar Attributes -->
    <declare-styleable name="StepProgressBar">
        <attr name="maxSteps" format="integer" />
        <attr name="currentStep" format="integer" />
        <attr name="progressColor" format="color" />
    </declare-styleable>
</resources>
